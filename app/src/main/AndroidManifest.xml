<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.thuongleit.babr">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <application
        android:name=".BarApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="com.parse.APPLICATION_ID"
            android:value="n54lBhnIqnMHF6D3COwMm4IKKorqpSeGZz6bzhns" />
        <meta-data
            android:name="com.parse.CLIENT_KEY"
            android:value="u4J7MU3cy2R0NRjLPpIYOaYXV8VIgFAiSqMKfZiX" />

        <activity
            android:name=".view.main.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>

            <meta-data
                android:name="android.app.seachable"
                android:resource="@xml/searchable" />
        </activity>
        <activity
            android:name=".view.scan.CameraActivity"
            android:parentActivityName=".view.main.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.thuongleit.babr.view.main.MainActivity" />
        </activity>
        <activity
            android:name=".view.product.BarViewActivity"
            android:parentActivityName=".view.main.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.thuongleit.babr.view.main.MainActivity" />
        </activity>
        <activity
            android:name=".view.signin.SignInActivity"
            android:configChanges="keyboardHidden|orientation"
            android:theme="@style/AppTheme.FullScreen" />
        <activity
            android:name=".view.signup.SignUpActivity"
            android:configChanges="keyboardHidden|orientation"
            android:theme="@style/AppTheme.FullScreen" />
        <activity
            android:name=".view.SplashActivity"
            android:theme="@style/AppTheme.SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".view.AppIntroActivity" />

        <meta-data
            android:name="io.fabric.ApiKey"
            android:value="22d4614fff80c524f8d3b07d3501fedd20385f40" />

        <activity
            android:name=".view.scan.SearchResultActivity"
            android:parentActivityName=".view.scan.CameraActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".view.scan.CameraActivity" />
        </activity>
    </application>

</manifest>
