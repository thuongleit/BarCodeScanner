<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.whooo.barscanner">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <application
        android:name="com.whooo.barscanner.BarApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <meta-data
            android:name="com.parse.APPLICATION_ID"
            android:value="n54lBhnIqnMHF6D3COwMm4IKKorqpSeGZz6bzhns" />
        <meta-data
            android:name="com.parse.CLIENT_KEY"
            android:value="u4J7MU3cy2R0NRjLPpIYOaYXV8VIgFAiSqMKfZiX" />

        <activity
            android:name=".activities.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>
            <meta-data
                android:name="android.app.seachable"
                android:resource="@xml/searchable" />
        </activity>
        <activity
            android:name=".activities.CameraActivity"
            android:parentActivityName=".activities.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.MainActivity" />
        </activity>
        <activity
            android:name=".activities.BarViewActivity"
            android:parentActivityName=".activities.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.MainActivity" />
        </activity>

        <activity android:name=".activities.LoginActivity"
            android:theme="@style/AppTheme.FullScreen"
            android:configChanges="keyboardHidden|orientation"/>
        <activity android:name=".activities.SignUpActivity"
            android:theme="@style/AppTheme.FullScreen"
            android:configChanges="keyboardHidden|orientation"/>

        <activity
            android:name=".activities.SplashActivity"
            android:theme="@style/AppTheme.SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <meta-data
            android:name="io.fabric.ApiKey"
            android:value="22d4614fff80c524f8d3b07d3501fedd20385f40" />
    </application>

</manifest>
