<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jokotech.babr">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.USE_CREDENTIALS" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <application
        android:name="com.jokotech.babr.BarApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id" />

        <activity
            android:name="com.jokotech.babr.view.main.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>

            <meta-data
                android:name="android.app.seachable"
                android:resource="@xml/searchable" />
        </activity>
        <activity
            android:name="com.jokotech.babr.view.scan.CameraActivity"
            android:parentActivityName="com.jokotech.babr.view.main.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.jokotech.babr.view.main.MainActivity" />
        </activity>
        <activity
            android:name="com.jokotech.babr.view.product.BarViewActivity"
            android:parentActivityName="com.jokotech.babr.view.main.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.jokotech.babr.view.main.MainActivity" />
        </activity>
        <activity
            android:name="com.jokotech.babr.view.signin.SignInActivity"
            android:configChanges="keyboardHidden|orientation" />
        <activity android:name="com.jokotech.babr.view.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.jokotech.babr.view.AppIntroActivity" />
        <activity android:name="com.jokotech.babr.view.qrgenerate.GenerateQR" />

        <activity
            android:name="com.jokotech.babr.view.scan.SearchResultActivity"
            android:parentActivityName="com.jokotech.babr.view.scan.CameraActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.jokotech.babr.view.scan.CameraActivity" />
        </activity>
        <activity android:name="com.jokotech.babr.view.history.HistoryActivity" />
        <activity android:name="com.jokotech.babr.view.history.DetailActivity" />

        <activity
            android:name=".view.signin.SignInWithEmailActivity"
            android:parentActivityName=".view.signin.SignInActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.jokotech.babr.view.signin.SignInActivity" />
        </activity>

        <activity
            android:name="com.facebook.FacebookActivity"
            android:configChanges="keyboard|keyboardHidden|screenLayout|screenSize|orientation"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" />

        <activity
            android:name=".view.signup.SignUpActivity"
            android:configChanges="keyboardHidden|orientation"
            android:parentActivityName=".view.signin.SignInWithEmailActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.jokotech.babr.view.signin.SignInWithEmailActivity" />
        </activity>
    </application>

</manifest>