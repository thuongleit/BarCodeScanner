<?xml version="1.0" encoding="utf-8"?>

    <FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/item_recycler_container"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:padding="@dimen/item_content_padding"
            android:background="@color/white">
            <!--android:background="@drawable/selector_item_clickable"-->


            <ImageView
                android:id="@+id/image_bar_view"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/img_default_gray" />

            <TextView
                android:id="@+id/text_barcode_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/image_bar_view"
                android:layout_marginLeft="9dp"
                android:layout_marginStart="9dp"
                android:layout_toEndOf="@id/image_bar_view"
                android:layout_toRightOf="@id/image_bar_view"
                android:ellipsize="end"
                android:gravity="top|start"
                android:lineSpacingExtra="2dp"
                android:maxLines="2"
                android:paddingBottom="6dp"
                android:textColor="@color/item_title_tv"
                android:textSize="@dimen/item_title_tv" />

            <TextView
                android:id="@+id/daily_date_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:textColor="@color/item_date"
                android:textSize="@dimen/item_date_tv" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/image_bar_view"
                android:layout_marginLeft="9dp"
                android:layout_marginStart="9dp"
                android:layout_toEndOf="@id/image_bar_view"
                android:layout_toRightOf="@id/image_bar_view"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/text_barcode_manufacture"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/bg_android_tag"
                    android:gravity="center"
                    android:text="manufacture"
                    android:textColor="@color/item_tag_tv"
                    android:textSize="@dimen/item_tag_tv" />

                <TextView
                    android:id="@+id/text_barcode_country"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/bg_ios_tag"
                    android:gravity="center"
                    android:text="country"
                    android:textColor="@color/item_tag_tv"
                    android:textSize="@dimen/item_tag_tv" />

                <TextView
                    android:id="@+id/text_source"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/bg_js_tag"
                    android:gravity="center"
                    android:text="source"
                    android:textColor="@color/item_tag_tv"
                    android:textSize="@dimen/item_tag_tv" />

            </LinearLayout>

        </RelativeLayout>

    </FrameLayout>