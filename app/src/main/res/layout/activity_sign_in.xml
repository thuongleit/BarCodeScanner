<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.signin.SignInActivity">

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/login_background" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:isScrollContainer="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="200dp"
                android:layout_height="150dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/logo" />

            <FrameLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp">

                <EditText
                    android:id="@+id/input_username"
                    style="@style/Login.InputEditTextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="username"
                    android:inputType="textEmailAddress" />

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_gravity="left|center_vertical"
                    android:src="@drawable/ic_person" />

            </FrameLayout>

            <FrameLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp">

                <EditText
                    android:id="@+id/input_password"
                    style="@style/Login.InputEditTextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="password"
                    android:inputType="textPassword" />

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_gravity="left|center_vertical"
                    android:src="@drawable/ic_lock" />
            </FrameLayout>

            <Button
                android:id="@+id/button_sign_in"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/button_background"
                android:padding="12dp"
                android:text="SIGN IN"
                android:textColor="@android:color/white"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="or sign in with"
                android:textColor="@android:color/white" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/button_facebook_login"
                    android:layout_width="143dp"
                    android:layout_height="40dp"
                    android:layout_marginRight="7dp"
                    android:background="@drawable/blue_rect"
                    android:src="@drawable/ico_fb" />


                <ImageButton
                    android:id="@+id/button_google_login"
                    android:layout_width="143dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="7dp"
                    android:background="@drawable/red_rect_rad"
                    android:src="@drawable/ico_gplus" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="or"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/button_sign_up"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:background="@drawable/rect_side_white"
                android:padding="10dp"
                android:text="SIGN UP"
                android:textColor="@android:color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="or"
                android:textColor="@android:color/white" />

            <com.whooo.barscanner.view.widget.HTMLTextView
                android:id="@+id/text_login_as_guest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/login_as_guest"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@android:color/white" />
        </LinearLayout>

    </ScrollView>
</RelativeLayout>