<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_background">

    <shem.com.materiallogin.MaterialLoginView
        android:id="@+id/login_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:loginActionText="Login"
        app:loginHint="Email"
        app:registerHint="Email"
        app:registerIcon="@drawable/ic_person_add"
        app:registerTitle="Join Us" />

    <TextView
        android:id="@+id/text_login_as_guest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="20dp"
        android:text="@string/text_sign_up_later"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@android:color/white" />
</FrameLayout>

